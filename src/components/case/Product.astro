---
import arrow from "../../assets/post/arrow.svg";
---

<section class="w-full px-6 grid grid-cols-4 gap-6 text-neutral-800 mb-9">
    <h5 class="text-4xl">Product Highlight</h5>
    <div class="col-span-3">
        <div class="grid grid-cols-3 gap-6">
            {
                [1, 2, 3, 4, 5, 6].map((i) => (
                    <article class="space-y-3">
                        <h6 class="text-xl font-medium">
                            Automatic Identification
                        </h6>
                        <p>
                            Customers simply input their vehicle's license plate
                            number into our system. Instantly, their
                            vehicle-related data will be displayed, including
                            user information and service history.
                        </p>
                    </article>
                ))
            }
        </div>
        <div class="w-full overflow-x-scroll mt-9">
            <div class="flex space-x-4 h-[36rem]">
                <img
                    src="/case/mockup-1.png"
                    alt=""
                    class="rounded-sm h-full"
                />
                <img
                    src="/case/mockup-2.png"
                    alt=""
                    class="rounded-sm h-full"
                />
                <img
                    src="/case/mockup-1.png"
                    alt=""
                    class="rounded-sm h-full"
                />
                <img
                    src="/case/mockup-2.png"
                    alt=""
                    class="rounded-sm h-full"
                />
            </div>
        </div>
        <div class="w-full flex justify-between items-center mt-6">
            <div class="space-x-3">
                {
                    [1, 2, 3, 4].map((i) => (
                        <button
                            class={
                                "cursor-pointer w-3 h-3 rounded-full " +
                                (i === 2 ? "bg-orange-800" : "bg-neutral-400")
                            }
                        />
                    ))
                }
            </div>
            <div class="flex space-x-3">
                <button
                    class="border border-neutral-900 rounded-full flex items-center justify-center w-10 h-10 cursor-pointer"
                >
                    <img src={arrow.src} />
                </button>
                <button
                    class="border border-neutral-900 rounded-full flex items-center justify-center w-10 h-10 cursor-pointer"
                    ><img src={arrow.src} class="rotate-180" />
                </button>
            </div>
        </div>
    </div>
</section>
