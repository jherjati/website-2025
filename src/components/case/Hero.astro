---
import share from "../../assets/post/share.svg";
import { formatDate } from "../../utils/func";

const {
    subtitle,
    title,
    client,
    publishedDate,
    topic,
    service,
    synopsis,
    hero,
    heroCaption,
} = Astro.props;
---

<section
    class="w-full px-3 sm:px-6 pb-6 sm:pb-12 fade-in-up mt-3 sm:mt-9"
    style="animation-delay: 1400ms;"
>
    <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 py-6 sm:py-10 px-4 sm:px-6 gap-y-6 sm:gap-y-10 gap-x-6 bg-stone-50/70 border-x border-t border-stone-200"
    >
        <div class="col-span-1 sm:col-span-2 lg:col-span-4 flex gap-2">
            <p
                class="text-stone-50 text-[10px] bg-neutral-900 px-3 py-2 rounded-lg w-fit"
            >
                Blog
            </p>
            <p
                class="border-neutral-900 border text-[10px] text-neutral-900 px-3 py-2 rounded-lg w-fit"
            >
                Case Study
            </p>
        </div>
        <div class="opacity-90 col-span-1 sm:col-span-2 lg:col-span-4">
            <h2 class="text-black text-2xl sm:text-3xl lg:text-4xl mb-2">{subtitle}</h2>
            <h1 class="text-black text-4xl sm:text-5xl lg:text-7xl">{title}</h1>
        </div>
        <div class="space-y-4 sm:space-y-6">
            <div>
                <p class="text-xs text-neutral-700">Client</p><p
                    class="text-lg sm:text-xl text-neutral-600"
                >
                    {client}
                </p>
            </div>
            <div>
                <p class="text-xs text-neutral-500">Published Date</p><p
                    class="text-lg sm:text-xl text-neutral-600"
                >
                    {formatDate(publishedDate)}
                </p>
            </div>
        </div>
        <div class="space-y-4 sm:space-y-6">
            <div>
                <p class="text-xs text-neutral-700">Topic</p><p
                    class="text-lg sm:text-xl text-neutral-600"
                >
                    {topic}
                </p>
            </div>
            <div>
                <p class="text-xs text-neutral-500">Service</p><p
                    class="text-lg sm:text-xl text-neutral-600"
                >
                    {service}
                </p>
            </div>
        </div>
        <div class="col-span-1 sm:col-span-2">
            <p class="text-neutral-800 text-base sm:text-lg mb-3">
                {synopsis}
            </p>
            <button
                class="bg-orange-700 py-2 px-3 flex space-x-2 rounded-sm mt-3"
                ><img src={share.src} alt="" /><p class="text-white text-sm">
                    CTA
                </p>
            </button>
        </div>
    </div>
    <img
        src={hero}
        alt=""
        class="w-full rounded-lg overflow-hidden bg-stone-50/70 border-x border-b border-stone-200"
    />
    <div class="w-full grid grid-cols-1 sm:grid-cols-2 mt-3">
        <div></div><p class="text-neutral-500 text-sm">
            {heroCaption}
        </p>
    </div>
</section>
