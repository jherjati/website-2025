---
import type { Highlight, Testimonial } from "../../utils/api";

interface Work {
    title: string;
    image: string;
    description: string;
    synopsis: string;
    topic: string;
    slug: string;
}

const { highlights, testimonials, works }: { highlights?: Highlight[], testimonials?: Testimonial[], works?: Work[] } = Astro.props;
---

<style>
    .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
    .scrollbar-hide::-webkit-scrollbar {
        display: none;
    }
</style>

<section class="w-full px-3 sm:px-6 grid grid-cols-1 lg:grid-cols-4 gap-4 sm:gap-6 text-neutral-800 mb-8 sm:mb-16">
    <h5 class="text-2xl sm:text-3xl lg:text-4xl">Tech Highlights</h5>
    <div class="col-span-1 lg:col-span-3">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
            {
                highlights?.map(({ title, description }) => (
                    <article class="space-y-3">
                        <h6 class="text-lg sm:text-xl font-medium">{title}</h6>
                        <p class="text-sm sm:text-base">{description}</p>
                    </article>
                ))
            }
        </div>
        <div class="col-span-1 lg:col-span-3 mt-8 sm:mt-16 mb-6 sm:mb-9">
            {testimonials && testimonials.length > 0 && (
                <div>
                    <p class="text-neutral-500 border-b border-neutral-600 pb-1">
                        In Their Words
                    </p>
                    {testimonials.map((testimonial) => (
                        <div class="mb-6 sm:mb-9">
                            <p class="text-neutral-600 text-base sm:text-lg mt-3 mb-4 sm:mb-6">
                                "{testimonial.message}"
                            </p>
                            <div class="flex space-x-4 sm:space-x-6">
                                <div id="avatar list" class="flex items-center">
                                    <img
                                        src={testimonial.personImage}
                                        alt={testimonial.name}
                                        class="rounded-full w-10 h-10 sm:w-14 sm:h-14"
                                    />
                                    <img
                                        src={testimonial.companyImage}
                                        alt={testimonial.company}
                                        class="rounded-full w-10 h-10 sm:w-14 sm:h-14 -ml-2 sm:-ml-3"
                                    />
                                </div>
                                <div>
                                    <h6 class="text-sm sm:text-base text-neutral-800">{testimonial.name} - {testimonial.role}</h6>
                                    <p class="text-xs sm:text-sm text-neutral-500">
                                        {testimonial.company}
                                    </p>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            )}
        </div>
        <div class="col-span-1 lg:col-span-3 mt-6 sm:mt-9">
            <p
                class="w-full border-b border-neutral-600 mb-12 text-neutral-500"
            >
                More Works
            </p>
            <div class="w-full overflow-x-scroll scrollbar-hide">
                <div class="flex space-x-3 sm:space-x-5">
                    {
                        works.map(({ title, image, description, slug }) => (
                            <div class="p-3 sm:p-4 border border-neutral-400 rounded-sm min-w-64 sm:min-w-72 z-10 flex flex-col">
                                <h5 class="text-xl sm:text-2xl text-neutral-800 line-clamp-3 mb-3 sm:mb-4 h-20 sm:h-24">
                                    {title}
                                </h5>
                                <img src={image} class="rounded-sm w-full h-40 sm:h-48 object-cover mb-3 sm:mb-4" />
                                <div class="grid grid-cols-2 gap-3 sm:gap-4 items-center mt-auto">
                                    <p class="text-xs sm:text-sm text-neutral-600 line-clamp-3">
                                        {description}
                                    </p>
                                    <a href={`/blog/case-study/${slug}/`} class="text-xs sm:text-sm text-white bg-orange-600 rounded-sm px-2 sm:px-3 py-2 text-center">
                                        Read More
                                    </a>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</section>
