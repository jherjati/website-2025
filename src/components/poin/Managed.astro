---
import powered1 from "../../assets/poin/powered-1.svg";
import powered2 from "../../assets/poin/powered-2.svg";
import powered3 from "../../assets/poin/powered-3.svg";
import powered4 from "../../assets/poin/powered-4.svg";

import powered11 from "../../assets/service/powered-1.svg";
import powered12 from "../../assets/service/powered-2.svg";
import powered13 from "../../assets/service/powered-3.svg";
import powered14 from "../../assets/service/powered-4.svg";

const { brand } = Astro.props;

const text = brand === "orange" ? "text-orange-500" : "text-rose-500";
const border = brand === "orange" ? "border-orange-500" : "border-rose-500";

const pillars = [
    {
        image: brand === "orange" ? powered11 : powered1,
        title: "Flexibility",
        description: `Select the model that fits your business: inhouse or on-site.`,
    },
    {
        image: brand === "orange" ? powered12 : powered2,
        title: "Expertise on Demand",
        description: `Access professionals with proven experience.`,
    },
    {
        image: brand === "orange" ? powered13 : powered3,
        title: "Cost Efficiency",
        description: `Scale resources without long-term overhead.`,
    },
    {
        image: brand === "orange" ? powered14 : powered4,
        title: "Seamless Integration",
        description: `Talent that adapts to your workflows and culture.`,
    },
];
---

<section
    class="mx-4 lg:mx-6 mt-6 pt-6 border-t border-stone-200 lg:grid grid-cols-12 gap-x-6"
>
    <div class="lg:col-span-3 mb-8 lg:mb-0">
        <h5 class={text + " text-xl lg:text-2xl mb-3 lg:mb-4"}>Managed Service Solutions</h5>
        <h2 class="text-2xl lg:text-4xl leading-tight">
            Flexible expertise, tailored to your needs
        </h2>
    </div>
    <div class="lg:col-span-9">
        <p class="mb-12 text-sm lg:text-lg pt-0 lg:pt-8 leading-relaxed text-neutral-700">
            Braga’s Managed Service offers companies the freedom to choose how
            projects are delivered. Whether handled fully by our inhouse team or
            through manpower placement within your organization, we provide the
            right talent to meet your operational and development needs. This
            approach ensures efficiency, seamless execution, and reduced
            overhead—so you can focus on outcomes, not resourcing challenges.
        </p>
        <h4 class="text-3xl lg:text-4xl mb-6 lg:mb-8">Value Pillars</h4>
        <div class="space-y-8 lg:space-y-0 lg:grid lg:grid-cols-4 gap-x-6">
            {
                pillars.map(({ image, title, description }) => (
                    <div>
                        <img src={image.src} alt="" class="w-10 h-10 lg:w-12 lg:h-12" />
                        <div class={"lg:h-20 my-3 border-b pb-3 " + border}>
                            <h6 class={text + " text-xl lg:text-3xl"}>{title}</h6>
                        </div>
                        <p class="text-sm lg:text-base text-neutral-700 leading-relaxed">{description}</p>
                    </div>
                ))
            }
        </div>

        <h4 class="text-3xl lg:text-4xl mb-6 lg:mb-8 mt-12 lg:mt-16">Comparison Model</h4>
        <div class="space-y-8 lg:space-y-0 lg:grid lg:grid-cols-2 gap-x-6">
            <div class="space-y-2 lg:space-y-3">
                <h6 class={text + " text-xl lg:text-3xl pb-2 mb-2"}>Inhouse Braga Team</h6>
                <p class="text-sm lg:text-base text-neutral-700">Project fully managed by Braga</p>
                <p class="text-sm lg:text-base text-neutral-700">End-to-end responsibility</p>
                <p class="text-sm lg:text-base text-neutral-700">Centralized delivery and oversight</p>
            </div>
            <div class="space-y-2 lg:space-y-3">
                <h6 class={text + " text-xl lg:text-3xl pb-2 mb-2"}>
                    On-Site Manpower Placement
                </h6>
                <p class="text-sm lg:text-base text-neutral-700">Talent embedded within client’s team</p>
                <p class="text-sm lg:text-base text-neutral-700">Works under client’s direction</p>
                <p class="text-sm lg:text-base text-neutral-700">Scales quickly to match project needs</p>
            </div>
        </div>
    </div>
</section>
