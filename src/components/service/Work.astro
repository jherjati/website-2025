---
import { fetchWorks } from "../../utils/api";

const works = await fetchWorks();
---

<section class='mx-6 my-12 py-9 border-t border-orange-500 relative'>
  <h6 class='text-orange-500 text-xl'>Our Work</h6>
  <div class='sm:grid grid-cols-4 gap-x-6 space-y-8 sm:space-y-0'>
    <h3 class='text-neutral-800 text-4xl sm:text-5xl mt-2 mb-3 col-span-2'>
      Braga Solutions, Integrated to You.
    </h3>
    <p class='text-neutral-700 text-sm sm:text-lg col-span-2'>
      Our interdisciplinary design and development approach accelerates the
      geospatial tech delivery to your hands.
    </p>
  </div>
  <div
    class='mt-12 flex overflow-x-scroll xl:grid grid-cols-4 gap-4 xl:p-6 xl:border border-stone-300 rounded-sm relative'
  >
    {
      works.slice(0, 4).map(({ title, image, description }) => (
        <div class='p-4 border border-neutral-400 rounded-sm min-w-72 z-10 flex flex-col'>
          <h5 class='text-2xl text-neutral-800 line-clamp-3 mb-4 h-24'>{title}</h5>
          <img src={image} class='rounded-sm w-full h-48 object-cover mb-4' />
          <div class='grid grid-cols-2 gap-4 items-center mt-auto'>
            <p class='text-sm text-neutral-600 line-clamp-3'>{description}</p>
            <button class='text-sm text-white bg-[#CD541C] rounded-sm px-3 py-2'>
              Read More
            </button>
          </div>
        </div>
      ))
    }
  </div>
</section>
