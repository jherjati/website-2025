---
import work1 from "../../assets/work-1.jpg";
import work2 from "../../assets/work-2.jpg";
import work3 from "../../assets/work-3.jpg";
import work4 from "../../assets/work-4.jpg";

const works = [
    {
        title: "SIPULAU Information System",
        image: work1,
        description: "The Geospatial Information Agency - BIG",
    },
    {
        title: "West Java Tourism Crisis Center (TCC)",
        image: work2,
        description: "DISPARBUD JABAR",
    },
    {
        title: "Elevating Retail Experience: KiosK",
        image: work3,
        description: "Hyundai",
    },
    {
        title: "Vessel Monitoring Integrated Fleet System",
        image: work4,
        description: "Security and Defense Sector",
    },
];
---

<section class="mx-6 my-12 py-9 border-t border-orange-500 relative">
    <h6 class="text-orange-500 text-xl">Our Work</h6>
    <div class="sm:grid grid-cols-4 gap-x-6 space-y-8 sm:space-y-0">
        <h3 class="text-neutral-800 text-4xl sm:text-5xl mt-2 mb-3 col-span-2">
            Braga Solutions, Integrated to You.
        </h3>
        <p class="text-neutral-700 text-sm sm:text-lg col-span-2">
            Our interdisciplinary design and development approach accelerates
            the geospatial tech delivery to your hands.
        </p>
    </div>
    <div
        class="mt-12 flex overflow-x-scroll sm:grid grid-cols-4 gap-4 sm:p-6 sm:border border-stone-300 rounded-sm relative"
    >
        {
            works.map(({ title, image, description }) => (
                <div class="p-4 space-y-4 border border-neutral-400 rounded-sm min-w-72 z-10">
                    <h5 class="text-2xl text-neutral-800">{title}</h5>
                    <img src={image.src} class="rounded-sm w-full" />
                    <div class="flex justify-between space-x-2">
                        <p class="text-sm text-neutral-600 grow line-clamp-2">
                            {description}
                        </p>
                        <button class="text-sm text-white bg-orange-600 rounded-sm min-w-28 px-3 py-2">
                            Read More
                        </button>
                    </div>
                </div>
            ))
        }
    </div>
</section>
