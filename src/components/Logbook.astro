---
import log1 from "../assets/log-1.svg";
import log2 from "../assets/log-2.svg";
import logbook from "../assets/logbook-bg.png";
import logbookLogo from "../assets/logbook-logo.svg";

const logs = [
    {
        title: "Simplify storytelling",
        description:
            "Streamline your storytelling process with our intuitive tools, enabling you to convey your message effectively.",
        image: log1,
    },
    {
        title: "Craft maps that reflect your style and identity",
        description:
            "Express your individuality through meticulously crafted maps tailored to your personal style and identity.",
        image: log2,
    },
];
---

<section
    class="sm:pb-16 relative border border-neutral-700 rounded-sm overflow-hidden bg-teal-950 z-0"
>
    <img
        src={logbook.src}
        alt="logbook screenshot"
        class="sm:absolute h-full w-full object-cover object-bottom-right top-0 left-0 -z-10"
    />

    <div
        class="pl-4 sm:pl-20 pr-4 pt-9 sm:pt-20 w-full sm:w-1/3 space-y-6 fade-in"
        style="animation-delay: 750ms;"
    >
        <img src={logbookLogo.src} />
        <h5 class="text-amber-50 text-5xl">
            Log Your Journey, Endless Possibility
        </h5>
        <p class="text-stone-50 text-lg">
            Stay tuned for the unveiling of our meticulously crafted logbook â€“
            where every entry marks a step toward unparalleled organization and
            memorable experiences. Launching soon!
        </p>
        <button class="bg-lime-400 rounded-sm text-black py-3 px-6"
            >Go to LogBook &rarr;</button
        >
    </div>

    <div
        class="pl-4 sm:pl-20 pr-4 pb-4 w-full sm:w-1/3 mt-16 sm:mt-30 space-y-4 fade-in-up"
        style="animation-delay: 1300ms;"
    >
        {
            logs.map(({ title, description, image }) => (
                <div class="gradient-border-1 rounded-sm group">
                    <div class="relative rounded-sm p-4 group-hover:bg-black/16">
                        <h6 class="text-lime-300 mb-3">{title}</h6>
                        <p class="text-neutral-400">{description} </p>
                        <img
                            src={image.src}
                            alt=""
                            class="absolute top-4 right-4"
                        />
                    </div>
                </div>
            ))
        }
    </div>
</section>
