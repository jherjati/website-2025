---
import log1 from "../../assets/home/log-1.svg";
import log2 from "../../assets/home/log-2.svg";
import logbook from "../../assets/home/logbook-bg.png";
import logbookLogo from "../../assets/home/logbook-logo.svg";

interface Feature {
  title: string;
  description: string;
}

interface Props {
  headline: string;
  description: string;
  ctaText: string;
  features: Feature[];
}

const { headline, description, ctaText, features } = Astro.props;

const featureImages = [log1, log2];
---

<section
  class='pb-8 md:pb-12 lg:pb-16 relative border border-neutral-700 rounded-sm overflow-hidden bg-teal-950 z-0'
>
  <img
    src={logbook.src}
    alt='logbook screenshot'
    class='md:absolute h-full w-full object-cover object-bottom-right top-0 left-0 -z-10'
  />

  <div
    class='pl-4 sm:pl-20 pr-4 md:w-full sm:w-1/3 space-y-6 pt-9 sm:pt-20 fade-in'
    style='animation-delay: 750ms;'
  >
    <img src={logbookLogo.src} />
    <h5
      class='text-amber-50 text-3xl lg:text-5xl leading-tight md:max-w-md lg:max-w-none'
    >
      {headline}
    </h5>
    <p class='text-stone-50 text-base md:text-lg'>
      {description}
    </p>
    <a
      href='https://logbook.id/'
      target='_blank'
      class='inline-block bg-lime-400 rounded-sm text-black py-2 md:py-3 px-4 md:px-6 text-sm md:text-base'
      >{ctaText}</a
    >
  </div>

  <div
    class='px-4 md:pl-12 lg:pl-20 md:pr-4 pb-4 w-full md:w-3/4 lg:w-1/3 mt-12 md:mt-16 lg:mt-30 space-y-3 md:space-y-4 fade-in-up'
    style='animation-delay: 1000ms;'
  >
    {
      features.map(({ title, description }, index) => (
        <div class='gradient-border-1 rounded-sm group'>
          <div class='relative rounded-sm p-3 md:p-4 group-hover:bg-black/16'>
            <h6 class='text-lime-300 text-base md:text-lg mb-2 md:mb-3 pr-8'>
              {title}
            </h6>
            <p class='text-neutral-400 text-sm md:text-base pr-8 md:pr-10'>
              {description}{" "}
            </p>
            <img
              src={featureImages[index]?.src}
              alt=''
              class='absolute top-3 right-3 md:top-4 md:right-4 w-6 h-6 md:w-8 md:h-8'
            />
          </div>
        </div>
      ))
    }
  </div>
</section>
