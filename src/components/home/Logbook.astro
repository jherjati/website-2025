---
import log1 from "../../assets/home/log-1.svg";
import log2 from "../../assets/home/log-2.svg";
import logbook from "../../assets/home/logbook-bg.png";
import logbookLogo from "../../assets/home/logbook-logo.svg";

interface Feature {
    title: string;
    description: string;
}

interface Props {
    headline: string;
    description: string;
    ctaText: string;
    features: Feature[];
}

const { headline, description, ctaText, features } = Astro.props;

const featureImages = [log1, log2];
---

<section
    class="sm:pb-16 relative border border-neutral-700 rounded-sm overflow-hidden bg-teal-950 z-0"
>
    <img
        src={logbook.src}
        alt="logbook screenshot"
        class="sm:absolute h-full w-full object-cover object-bottom-right top-0 left-0 -z-10"
    />

    <div
        class="pl-4 sm:pl-20 pr-4 pt-9 sm:pt-20 w-full sm:w-1/3 space-y-6 fade-in"
        style="animation-delay: 750ms;"
    >
        <img src={logbookLogo.src} />
        <h5 class="text-amber-50 text-5xl">
            {headline}
        </h5>
        <p class="text-stone-50 text-lg">
            {description}
        </p>
        <a
            href="https://logbook.id/"
            target="_blank"
            class="bg-lime-400 rounded-sm text-black py-3 px-6">{ctaText}</a
        >
    </div>

    <div
        class="pl-4 sm:pl-20 pr-4 pb-4 w-full sm:w-1/3 mt-16 sm:mt-30 space-y-4 fade-in-up"
        style="animation-delay: 1000ms;"
    >
        {
            features.map(({ title, description }, index) => (
                <div class="gradient-border-1 rounded-sm group">
                    <div class="relative rounded-sm p-4 group-hover:bg-black/16">
                        <h6 class="text-lime-300 mb-3">{title}</h6>
                        <p class="text-neutral-400">{description} </p>
                        <img
                            src={featureImages[index]?.src}
                            alt=""
                            class="absolute top-4 right-4"
                        />
                    </div>
                </div>
            ))
        }
    </div>
</section>
