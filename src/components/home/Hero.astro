---
import motionImage from "../../assets/home/motion-placeholder.png";

interface Props {
	headline: string;
	subheadline: string;
	ctaText: string;
	partnerLogos: string[];
}

const { headline, subheadline, ctaText, partnerLogos } = Astro.props;
---

<section class="w-full px-6 mt-3 space-y-2">
	<div class="w-full fade-in-up" style="animation-delay: 1400ms;">
		<div
			class="relative bg-linear-to-b from-neutral-800 to-neutral-900 w-full text-white flex flex-col justify-center items-center text-center space-y-10 pt-64 pb-18 overflow-hidden"
		>
			<img
				src={motionImage.src}
				class="absolute z-0 left-0 top-0 h-full w-full max-w-none"
			/>
			<h3 class="text-4xl sm:text-7xl px-3 sm:w-2/3">
				{headline}
			</h3>
			<h5 class="text-sm sm:text-lg text-neutral-400 px-3 sm:w-1/2">
				{subheadline}
			</h5>
			<button class="bg-orange-600 rounded-sm text-white py-3 px-6">
				{ctaText}
			</button>
		</div>

		<div class="center-content">
			<div class="wrapper pt-9 pb-24">
				<div class="marquee-text fadeout-horizontal">
					<div class="marquee-text-track">
						{
							partnerLogos.map((order, index) => (
								<img src={order} />
							))
						}
						{
							partnerLogos.map((order, index) => (
								<img src={order} aria-hidden="true" />
							))
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.center-content {
		min-height: 100%;
		display: flex;
		align-items: center;
	}

	.wrapper {
		width: 100%;
		color: white;
		font-size: 4rem;
	}

	.marquee-text {
		overflow: clip;
	}

	.fadeout-horizontal {
		mask-image: linear-gradient(
			to right,
			transparent,
			black 5rem,
			black calc(100% - 5rem),
			transparent
		);
	}

	.marquee-text-track {
		display: flex;
		padding-left: 4.8rem;
		gap: 4.8rem;
		width: max-content;
		animation: marquee-move-text var(--speed, 20s) linear infinite
			var(--direction, forwards);
	}

	@keyframes marquee-move-text {
		to {
			transform: translateX(-50%);
		}
	}
</style>
