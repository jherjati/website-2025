---
import type { Highlight } from "../../utils/api";

const { post } = Astro.props;
---

<section class="w-full px-6 grid grid-cols-4 gap-6 text-neutral-800 my-12">
    <h5 class="text-4xl">Main Points</h5>
    <div class="col-span-3 grid grid-cols-2 gap-6">
        {
            post.main_point &&
                post.main_point.map((point: Highlight) => (
                    <article class="space-y-6">
                        <h6 class="text-xl font-medium">{point.title}</h6>
                        <div set:html={point.description} class="mutate-list space-y-3" />
                    </article>
                ))
        }
    </div>
</section>

<style>
    .mutate-list :global(ul) {
        list-style-type: disc;
        margin-left: 1rem;
    }
</style>
