---
import arrow from "../../assets/post/arrow.svg";

const { post } = Astro.props;
---

<section class="w-full px-6 grid grid-cols-4 gap-6 text-neutral-800">
    <h5 class="text-4xl">Overview</h5>
    <div class="col-span-3">
        {
            post.overview && (
                <article class="space-y-6" set:html={post.overview} />
            )
        }
        {
            post.gallery && post.gallery.length > 0 && (
                <div class="w-full overflow-x-scroll mt-9">
                    <div class="flex space-x-4 h-[36rem]">
                        {post.gallery.map(
                            (img: { directus_files_id: string }) => (
                                <img
                                    src={`https://panel.braga.co.id/panel/assets/${img.directus_files_id}`}
                                    alt={post.title}
                                    class="rounded-sm h-full"
                                />
                            ),
                        )}
                    </div>
                </div>
            )
        }
        <div class="w-full flex justify-between items-center mt-6">
            <div class="space-x-3">
                {
                    post.gallery.map((_g: string, i: number) => (
                        <button
                            class={
                                "cursor-pointer w-3 h-3 rounded-full " +
                                (i === 1 ? "bg-orange-800" : "bg-neutral-400")
                            }
                        />
                    ))
                }
            </div>
            <div class="flex space-x-3">
                <button
                    class="border border-neutral-900 rounded-full flex items-center justify-center w-10 h-10 cursor-pointer"
                >
                    <img src={arrow.src} />
                </button>
                <button
                    class="border border-neutral-900 rounded-full flex items-center justify-center w-10 h-10 cursor-pointer"
                    ><img src={arrow.src} class="rotate-180" />
                </button>
            </div>
        </div>
    </div>
</section>
